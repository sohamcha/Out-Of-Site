{
    "name": "Out Of Site",
    "description" : "Extension to monitor and time control web access during work/important hours",
    "version": "0.2",
    "manifest_version": 2,
    "icons": {
        "16": "icon.png",
        "19": "icon.png",
        "38": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html",
      "default_title": "Out Of Site Chrome Extension"
    },
    "permissions" : ["tabs","storage","activeTab","notifications","unlimitedStorage","idle","http://*/","https://*/"],
    "background": {
      "persistent": true,
      "scripts": ["background.js"]
    }
  }